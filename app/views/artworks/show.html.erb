<%= image_tag @artwork.image.url(:medium) %>
<h1><%= @artwork.title %></h1>
<p><%= @artwork.link %></p>
<p><%= @artwork.content %></p>
<p><%= @artwork.artist.name %></p>
<p><%= @artwork.get_upvotes.size %>
  Likes
</p>

<p><%= @artwork.get_downvotes.size %>
  Dislikes
</p>


<%= link_to 'Like', like_artwork_path(@artwork), method: :get %>
<%= link_to 'Dislike', dislike_artwork_path(@artwork), method: :get %>

<div id="comment">
  <div class="comment_count"><h2><%= pluralize(@artwork.comments.count, "comment")%></h2></div>

  <% @comments.each do |comment| %>
  <div class="comment">
   <div class="username"> <h3><%= comment.artist.name %></h3></div>
    <div class="content"><%= comment.content %></div>
  </div>
      <% end %>
</div>

<%= render 'comments/form'%>

<%= link_to 'Edit', edit_artwork_path(@artwork) %>
<%= link_to 'Delete',artwork_path(@artwork), method: :delete,
                                    data: {confirm: 'Are you sure?'}%>
<%= link_to 'Home', root_path %>
